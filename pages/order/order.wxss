page {
  height: 100%;
  background-color: #fff;
}

.top_botton {
  width: 100%;
  height: 8%;
  display: flex;
  background-color: #fff;
  flex-direction: row;
  border-style: solid;
  border-width: 2rpx 0 2rpx 0;
  border-color: #ebebeb;
}

#botton_1 {
  width: 33.3%;
  height: 100%;
  border-width: 0;
  margin: auto;
  font-size: 90%;
  border-radius: 0;
  justify-content: space-around;
}

#botton_2 {
  width: 33.3%;
  height: 100%;
  margin: auto;
  font-size: 90%;
  border-width: 0;
  border-radius: 0;
  justify-content: space-around;
}

#botton_3 {
  width: 33.3%;
  height: 100%;
  margin: auto;
  text-align: center;
  font-size: 90%;
  border-width: 0;
  border-radius: 0%;
  justify-content: space-around;
}

.bottom_line {
  width: 12%;
  height: 0.5%;
  margin: 0;
  margin-left: 10%;
  background-color:#FFCC99;
}

.section {
  width: 100%;
  height: 91%;
  display: flex;
  overflow: scroll;
  background-color: #fff;
}

.scroll {
  width: 100%;
  height: 100%;
  background-color:#ebebeb;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  flex-direction: column
}

.viewstate{
  padding: 10rpx;
  border-style: solid;
  background: #fff;
  border-width: 0 0 4rpx 0;
  border-color: #ebebeb;
}

#list {
  width: 100%;
  height: 350rpx;
  background-color: #fff;
  margin-left: auto;
  margin-right: auto;
  margin-top: 0;
  margin-bottom: 3%;
  border-style: solid;
  border-width: 0rpx;
  border-radius: 10rpx;
  border-color:#ebebeb;
}

.ordermod{
  display: flex;
  justify-content:flex-start;
  align-items: center;
  flex-direction: row;
}

.orderItemImg {
  display: flex;
  justify-content:flex-start;
  align-items: centert;
  flex-direction: column;
}

.orderItemDetail {
  display: flex;
  justify-content:flex-start;
  align-items: flex-start;
  flex-direction: column;
  margin-left: 30rpx;
}

.price {
  font-size: 80%;
  color:#ef3434;
}

.textin{
  color:#040008;
}

.commitButton {
  border: solid red 2rpx;
  border-radius: 25rpx;
  margin-top: 8rpx;
  margin-left: 330rpx;
  height: 45rpx;
  width: 150rpx;
  font-size: 28rpx;
  color: red;
  text-align: center;
  line-height: 45rpx;
}