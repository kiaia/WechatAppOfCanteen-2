/**index.wxss**/
page{
  height: 100%;
  background-color: #EBEBEB;
}
.box{
  width: 100%;
  height: 255rpx;
  background-color: #3E3E3E;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}
  
.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin-bottom: 5rpx;
    margin-top: 25rpx;
    border-radius: 50%;
}
  
.userinfo-nickname {
  margin-top: 7rpx;
  margin-bottom: 10rpx;
  color: white;
  font-size: 18px;
  font-weight: 1px;
}

.items1{
  height: 50px;
  background-color: white;
  margin-top: 5px;
  margin-bottom: 2px;
  display: flex;
  border-radius: 0px;
}

.items1::after{
  border: none;
}

.items2{
  height: 50px;
  background-color: white;
  margin-top: 5px;
  margin-bottom: 5px;
  display: flex;
  border-radius: 0px;
}

.items2::after{
  border: none;
}


.first{
  height: 40px;
  margin-top: 15px;
  margin-bottom: 10px;
  display: flex;
  border-radius: 0px;
  background-color: white;
}

.first::after{
  border: none;
}

.second{
  height: 85px;
  margin-top: 23px;
  margin-bottom: 10px;
  font-size: 20px;
  font-family: "Microsoft Yahei";
}

.third{
  height: 170px;
}

.schoolCard{
  margin-left: 5px;
  height: 50px;
  line-height: 50px;
  font-size: 15px;
  font-weight: bold;
}

.card{
  margin: 10px;
  height: 20px;
  width: 20px;
}




